    "components": {
        "schemas": {
            "Workspace": {
                "type": "object",
                "description": "Workspace object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Workspace ID",
                        "example": "wks-123456789"
                    },
                    "name": {
                        "type": "string",
                        "description": "Workspace name",
                        "example": "workspace name"
                    },
