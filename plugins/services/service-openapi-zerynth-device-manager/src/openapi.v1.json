                        "example": "workspace description"
                    },
                    "account_id": {
                        "type": "string",
                        "description": "The ID of the current account",
                        "example": "acc-123456789"
                    },
                    "created_at": {
                        "type": "string",
                        "description": "Fleet creation date in RFC 3339 format",
                        "format": "RFC 3339",
                        "example": "2021-03-26T09:46:00.565155Z"
                    }
