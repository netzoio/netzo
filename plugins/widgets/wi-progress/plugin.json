        "uid": {
          "const": "wi-progress"
        },
        "w": {
          "const": 3
        },
        "h": {
          "const": 8
        },
        "name": {
          "type": "string",
          "title": "Display name",
          "required": true
        },
        "description": {
          "type": "string",
          "title": "Description",
          "x-display": "textarea"
        },
        "variables": {
          "type": "object",
          "title": "Data",
          "properties": {
            "variables": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {},
                "x-display": "custom-vjs-variable"
              },
              "x-display": "custom-vjs-variables"
            }
          },
          "x-schema": {},
          "x-types": [
            "integer",
            "number"
          ],
          "x-examples": [
            {
              "text": "Integer",
              "value": 73
            },
            {
              "text": "Number",
              "value": 28.7
            }
          ]
        },
        "actions": {
          "type": "object",
          "title": "Actions",
          "properties": {
            "actions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {},
                "x-display": "custom-vjs-action"
              },
              "x-display": "custom-vjs-actions"
            }
          }
        },
        "display": {
          "type": "object",
          "title": "Display",
          "properties": {
            "transparent": {
              "type": "boolean",
              "title": "Transparent"
            },
            "hideToolbar": {
              "type": "boolean",
              "title": "Hide Toolbar"
            },
            "label": {
              "type": "string",
              "title": "Label"
            },
            "color": {
              "type": "string",
              "title": "Color",
              "format": "hexcolor"
            },
            "textColor": {
              "type": "string",
              "title": "Text color",
              "format": "hexcolor"
            },
            "bgImageUrl": {
              "type": "string",
              "title": "Background Image",
              "description": "The URL of an image to use as background image.",
              "contentMediaType": "image/*",
              "x-props": {
                "clearable": true
              },
              "x-options": {
                "filesAsDataUrl": true
              },
              "writeOnly": true
            },
            "circular": {
              "type": "boolean",
              "title": "Circular",
              "description": "Renders circular bar instead of linear bar"
            },
            "rotate": {
              "type": "integer",
              "title": "Rotate [deg]",
              "description": "Rotates the circle start point in deg",
              "minimum": -360,
              "maximum": 360
            },
            "size": {
              "type": "integer",
              "title": "Size [px]",
              "description": "Sets the diameter of the circle in pixels",
              "minimum": 0
            },
            "width": {
              "type": "integer",
              "title": "Width [px]",
              "description": "Sets the stroke of the circle in pixels",
              "minimum": 0
            },
            "asPercentage": {
              "type": "boolean",
              "title": "As Percentage [%]",
              "description": "Prepends a '%' symbol to value display"
            }
          }
        },
        "grid": {
          "type": "object",
          "title": "Grid",
          "properties": {
            "autoFlow": {
              "type": "string",
              "title": "Auto flow",
              "description": "The grid-auto-flow CSS property controls how the auto-placement algorithm works, specifying exactly how auto-placed items get flowed into the grid.",
              "enum": [
                "column",
                "dense",
                "row",
                "column dense",
                "row dense"
              ]
            },
            "gap": {
              "type": "integer",
              "title": "Gap [px]",
              "description": "The gap CSS property sets the gaps (gutters) between rows and columns. It is a shorthand for row-gap and column-gap.",
              "minimum": 0
            }
          }
        }
      }
    },
    "options": {}
