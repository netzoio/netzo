    "color": "",
    "screenshots": [
      {
        "label": "Screenshot of the widget",
        "src": "https://raw.githubusercontent.com/netzoio/netzo/main/plugins/widgets/wi-u-display/src/assets/images/screenshot.png"
      }
    ]
  },
  "links": [
    {
      "rel": "author",
      "href": "https://netzo.io",
