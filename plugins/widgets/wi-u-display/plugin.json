    {
      "rel": "license",
      "href": "https://raw.githubusercontent.com/netzoio/netzo/main/packages/plugins/LICENSE"
    }
  ],
  "form": {
    "model": {
      "uid": "wi-u-display",
      "w": 8,
      "h": 12,
      "name": "",
      "description": "",
      "web": {},
      "display": {
        "transparent": false,
        "hideToolbar": false,
        "color": "#0080FF",
        "textColor": "#121212",
        "imagePadding": "8px",
        "imageObjectFit": "contain",
        "bgImageUrl": ""
      }
    },
    "schema": {
      "type": "object",
      "x-display": "expansion-panels",
      "x-props": {
        "value": [
          0,
          1
        ]
      },
      "properties": {
        "_type": {
          "const": "widget"
        },
        "uid": {
          "const": "wi-u-display"
        },
        "w": {
          "const": 8
        },
        "h": {
          "const": 12
        },
        "name": {
          "type": "string",
          "title": "Display name",
          "required": true
        },
        "description": {
          "type": "string",
          "title": "Description",
          "x-display": "textarea"
        },
        "web": {
          "type": "object",
          "title": "Web Property",
          "properties": {
            "itemId": {
              "type": "string"
            },
            "path": {
              "type": "string"
            },
            "operations": {
              "type": "string",
              "enum": [
                "get"
              ]
            },
            "href": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "rel": {
              "type": "string"
            },
            "anchor": {
              "type": "string"
            },
            "sizes": {
              "type": "string"
            }
          },
          "required": [
            "itemId",
            "docKey",
            "path",
            "operations",
            "type"
          ],
          "additionalProperties": true,
          "x-display": "custom-vjs-select-item-web-operation",
          "examples": []
        },
        "display": {
          "type": "object",
          "title": "Display",
          "properties": {
            "transparent": {
              "type": "boolean",
              "title": "Transparent"
            },
            "hideToolbar": {
              "type": "boolean",
              "title": "Hide Toolbar"
            },
            "color": {
              "type": "string",
              "title": "Color",
              "format": "hexcolor"
            },
            "textColor": {
              "type": "string",
              "title": "Text color",
              "format": "hexcolor"
            },
            "imagePadding": {
              "type": "number",
              "title": "Padding [px]",
              "description": "Sets image padding in pixels."
            },
            "imageObjectFit": {
              "type": "string",
              "title": "Image object fit",
              "description": "Sets how the content should be resized to fit its container.",
              "enum": [
                "contain",
                "cover",
                "fill",
                "none",
                "scale-down"
              ]
            },
            "bgImageUrl": {
              "type": "string",
              "title": "Background Image",
              "description": "The URL of an image to use as background image.",
              "contentMediaType": "image/*",
              "x-props": {
                "clearable": true
              },
              "x-options": {
                "filesAsDataUrl": true
              },
              "writeOnly": true
            }
          }
        }
      }
    },
    "options": {}
  }
}