{
  "uid": "wi-u-image",
  "type": "widget",
  "version": "1.0.0",
  "status": "beta",
  "category": "core",
  "name": "Image",
  "description": "Image widget for Netzo",
  "keywords": [
    "image"
  ],
  "authors": [
    "miguel.romero@netzo.io"
  ],
  "license": "MIT",
  "main": "widgets/components/u-image/index.js",
  "display": {
    "imageUrl": "https://raw.githubusercontent.com/netzoio/netzo/main/plugins/widgets/wi-u-image/src/assets/icon.png",
    "color": "",
    "screenshots": [
      {
        "label": "Screenshot of the widget",
        "src": "https://raw.githubusercontent.com/netzoio/netzo/main/plugins/widgets/wi-u-image/src/assets/images/screenshot.png"
      }
    ]
  },
  "links": [
    {
      "rel": "author",
      "href": "https://netzo.io",
      "title": "Netzo"
    },
    {
      "rel": "repository",
      "href": "https://github.com/netzoio/netzo/tree/main/packages/plugins/plugins/widgets/wi-u-image"
    },
    {
      "rel": "readme",
      "href": "https://raw.githubusercontent.com/netzoio/netzo/main/plugins/widgets/wi-u-image/README.md"
    },
    {
      "rel": "license",
      "href": "https://raw.githubusercontent.com/netzoio/netzo/main/packages/plugins/LICENSE"
    }
  ],
  "form": {
    "model": {
      "uid": "wi-u-image",
      "w": 5,
      "h": 10,
      "name": "",
      "description": "",
      "display": {
        "transparent": false,
        "hideToolbar": false,
        "color": "#0080FF",
        "textColor": "",
        "imagePadding": "8px",
        "imageObjectFit": "contain",
        "bgImageUrl": ""
      },
      "options": {
        "src": "https://netzo.io/img/netzo-symbol-light.svg",
        "alt": "Netzo Web Platform",
        "href": "https://netzo.io"
      }
    },
    "schema": {
      "type": "object",
      "x-display": "expansion-panels",
      "x-props": {
        "value": [
          0,
          1
        ]
      },
      "properties": {
        "_type": {
          "const": "widget"
        },
        "uid": {
          "const": "wi-u-image"
        },
        "w": {
          "const": 8
        },
        "h": {
          "const": 12
        },
        "name": {
          "type": "string",
          "title": "Display name",
          "required": true
        },
        "description": {
          "type": "string",
          "title": "Description",
          "x-display": "textarea"
        },
        "options": {
          "type": "object",
          "title": "Options",
          "properties": {
            "imageUrl": {
              "type": "string",
              "title": "Image",
              "description": "The image to display.",
              "contentMediaType": "image/*",
              "x-props": {
                "clearable": true
              },
              "x-options": {
                "filesAsDataUrl": true
              },
              "writeOnly": true
            },
            "alt": {
              "type": "string",
              "title": "Image Alt Text",
              "description": "Alternate text for an image, if the image cannot be displayed.",
              "x-display": "textarea"
            },
            "href": {
              "type": "string",
              "title": "Link URL",
              "description": "The URL to redirect to on image click."
            }
          }
        },
        "display": {
          "type": "object",
          "title": "Display",
          "properties": {
            "transparent": {
              "type": "boolean",
              "title": "Transparent"
            },
            "hideToolbar": {
              "type": "boolean",
              "title": "Hide Toolbar"
            },
            "color": {
              "type": "string",
              "title": "Color",
              "format": "hexcolor"
            },
            "textColor": {
              "type": "string",
              "title": "Text color",
              "format": "hexcolor"
            },
            "imagePadding": {
              "type": "number",
              "title": "Padding [px]",
              "description": "Sets image padding in pixels."
            },
            "imageObjectFit": {
              "type": "string",
              "title": "Image object fit",
              "description": "Sets how the content should be resized to fit its container.",
              "enum": [
                "contain",
                "cover",
                "fill",
                "none",
                "scale-down"
              ]
            },
            "bgImageUrl": {
              "type": "string",
              "title": "Background Image",
              "description": "The URL of an image to use as background image.",
              "contentMediaType": "image/*",
              "x-props": {
                "clearable": true
              },
              "x-options": {
                "filesAsDataUrl": true
              },
              "writeOnly": true
            }
          }
        }
      }
    },
    "options": {}
  }
}